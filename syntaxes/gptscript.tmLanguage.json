{
	"scopeName": "source.gptscript",
	"name": "gptscript",
	"patterns": [
		{
			"include": "#tool"
		}
	],
	"repository": {
		"tool": {
			"patterns": [
				{
					"include": "#preamble"
				},
				{
					"include": "#body"
				}
			]
		},
		"preamble": {
			"patterns": [
				{
					"include": "#comment"
				},
				{
					"include": "#name"
				},
				{
					"include": "#tools"
				},
				{
					"include": "#description"
				},
				{
					"include": "#model-name"
				},
				{
					"include": "#max-tokens"
				},
				{
					"include": "#temperature"
				},
				{
					"include": "#json-response"
				},
				{
					"include": "#internal-prompt"
				},
				{
					"include": "#arg"
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment.line.number-sign.gptscript",
					"match": "^#\\s+.*"
				}
			]
		},
		"name": {
			"patterns": [
				{
					"match": "(?i)(\\b(Name)\\b):([^:]*)",
					"captures": {
						"2": {
							"name": "keyword.parameter.gptscript"
						},
						"3": {
							"name": "entity.name.function"
						}
					}
				}
			]
		},
		"tools": {
			"patterns": [
				{
					"match": "(?i)(\\b(Tool|Tools)\\b):([^:]*)",
					"captures": {
						"2": {
							"name": "keyword.parameter.gptscript"
						},
						"3": {
							"patterns": [
								{
									"match": "\\b\\w+\\b",
									"name": "variable.parameter.function"
								}
							]
						}
					}
				}
			]
		},
		"description": {
			"patterns": [
				{
					"match": "(?i)(\\b(Description)\\b):([^:]*)",
					"captures": {
						"2": {
							"name": "keyword.parameter.gptscript"
						},
						"3": {
							"name": "string"
						}
					}
				}
				
			]
		},
		"model-name": {
			"patterns": [
				{
					"match": "(?i)(\\b(Model Name)\\b):([^:]*)",
					"captures": {
						"2": {
							"name": "keyword.parameter.gptscript"
						},
						"3": {
							"name": "string"
						}
					}
				}
				
			]
		},
		"max-tokens": {
			"patterns": [
				{
					"match": "(?i)(\\b(Max Tokens)\\b):([^:]*)",
					"captures": {
						"2": {
							"name": "keyword.parameter.gptscript"
						},
						"3": {
							"name": "numeric"
						}
					}
				}
				
			]
		},
		"temperature": {
			"patterns": [
				{
					"match": "(?i)(\\b(Temperature)\\b):([^:]*)",
					"captures": {
						"2": {
							"name": "keyword.parameter.gptscript"
						},
						"3": {
							"name": "numeric"
						}
					}
				}
				
			]
		},
		"json-response": {
			"patterns": [
				{
					"match": "(?i)(\\b(JSON Response)\\b):([^:]*)",
					"captures": {
						"2": {
							"name": "keyword.parameter.gptscript"
						},
						"3": {
							"name": "boolean"
						}
					}
				}
				
			]
		},
		"internal-prompt": {
			"patterns": [
				{
					"match": "(?i)(\\b(Internal Prompt)\\b):([^:]*)",
					"captures": {
						"2": {
							"name": "keyword.parameter.gptscript"
						},
						"3": {
							"name": "boolean"
						}
					}
				}
				
			]
		},
		"arg": {
			"patterns": [
				{
					"match": "(?i)(\\b(Arg|Args)\\b):([^:]*):([^:]*)",
					"captures": {
						"2": {
							"name": "keyword.parameter.gptscript"
						},
						"3": {
							"name": "variable.parameter.function"
						},
						"4": {
							"name": "string"
						}
					}
				},
				{
					"match": "(?i)(\\b(Arg|Args)\\b):([^:]*)",
					"captures": {
						"2": {
							"name": "keyword.parameter.gptscript"
						},
						"3": {
							"name": "string"
						}
					}
				}
			]
		},
		"body": {
			"patterns": [
				{
					"name": "string",
					"begin": ".+",
					"end": "---(-)?"
				}
			]
		}
	}
}